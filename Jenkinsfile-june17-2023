pipeline {
    agent any 
    tools {
        maven "maven3.9.2"
    }
    }
    stages{
        stage('checkoutfromsourcecode'){
            steps{
                sh "echo 'today is june 17' "
                git 'https://github.com/Ogedasilver/jenkins-cicd-june17-2023.git'
            }
        }
    }
    stages{
        stage('Test+package+build')
            steps{
                sh "echo 'mavenbeing used as our build' " 
                sh "echo 'Liontechengineers on the move' "
                sh "mvn test"
                sh "mvn install"
                sh "mvn clean package"
                sh "mvn validate"
                sh "mvn verify"
            }

    }
    stages{
        stage('codequality+analysis'){
            steps{
                sh "echo 'running continous feedback' "
                sh "mvn sonar:sonar"
            }

    }

    stages{
        stage('upload artifact to nexus')
            steps{
                sh "echo 'upload build artifact into nexus'"
                sh "mvn deploy"
                
            }

    }

    stages{
        stage('cdeploy to test environment')
            steps{
                sh "echo 'deploy to tomcat' "
                
            }

    }



}